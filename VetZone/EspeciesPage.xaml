<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="VetZone.EspeciesPage"
             Title="EspeciesPage"
             BackgroundColor="LightGray">
    <ScrollView>
        <VerticalStackLayout Spacing="10" Margin="15">
            <Button Text="☰ Menu" TextColor="Black" 
                Clicked="OpenFlyoutMenu"/>
            <Label Text="Espécies" FontSize="Large" TextColor="Black" Margin="20" HorizontalOptions="Center" />

            <Grid ColumnDefinitions="4*,1*,1*" HeightRequest="50">
                <Button Text="Espécie 1" Clicked="OnEspecieClicked" Grid.Column="0" HorizontalOptions="Fill"/>
                <ImageButton Source="lapis.png" Clicked="OnEditarEspecieClicked" Grid.Column="1" HeightRequest="30" WidthRequest="30" />
                <ImageButton Source="lixeira.png" Clicked="OnExcluirEspecieClicked" Grid.Column="2" HeightRequest="30" WidthRequest="30" />
            </Grid>

            <Grid ColumnDefinitions="4*,1*,1*" HeightRequest="50">
                <Button Text="Especie 2" Clicked="OnEspecieClicked" Grid.Column="0" HorizontalOptions="Fill" />
                <ImageButton Source="lapis.png" Clicked="OnEditarEspecieClicked" Grid.Column="1" HeightRequest="30" WidthRequest="30" />
                <ImageButton Source="lixeira.png" Clicked="OnExcluirEspecieClicked" Grid.Column="2" HeightRequest="30" WidthRequest="30" />
            </Grid>

            <Grid ColumnDefinitions="4*,1*,1*" HeightRequest="50">
                <Button Text="Especie 3" Clicked="OnEspecieClicked" Grid.Column="0" HorizontalOptions="Fill" />
                <ImageButton Source="lapis.png" Clicked="OnEditarEspecieClicked" Grid.Column="1" HeightRequest="30" WidthRequest="30" />
                <ImageButton Source="lixeira.png" Clicked="OnExcluirEspecieClicked" Grid.Column="2" HeightRequest="30" WidthRequest="30" />
            </Grid>

            <Grid ColumnDefinitions="4*,1*,1*" HeightRequest="50">
                <Button Text="Especie 4" Clicked="OnEspecieClicked" Grid.Column="0" HorizontalOptions="Fill" />
                <ImageButton Source="lapis.png" Clicked="OnEditarEspecieClicked" Grid.Column="1" HeightRequest="30" WidthRequest="30" />
                <ImageButton Source="lixeira.png" Clicked="OnExcluirEspecieClicked" Grid.Column="2" HeightRequest="30" WidthRequest="30" />
            </Grid>

            <Button Text="Adicionar Espécie" Clicked="OnAdicionarEspecieClicked" WidthRequest="300" Margin="30"/>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
